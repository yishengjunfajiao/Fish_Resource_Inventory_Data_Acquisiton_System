<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.phoenix.fishresourceinventorydataacquisitonsystem.activity.MeasuringSiteActivity"
    tools:showIn="@layout/activity_measuring_site">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/longitude_latitude_layout"
        android:orientation="horizontal"

        android:weightSum="2"
        android:layout_marginTop="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/longitude"
            android:layout_weight="1"
            android:hint="经度"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/latitude"
            android:layout_weight="1"
            android:hint="纬度"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/sampling_water1"
        android:layout_below="@id/longitude_latitude_layout"
        android:background="@drawable/edittext_corner_shape"
        android:hint="采样水层1"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/sampling_water2"
        android:hint="采样水层2"
        android:background="@drawable/edittext_corner_shape"
        android:layout_below="@id/sampling_water1"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/sampling_water3"
        android:hint="采样水层3"
        android:background="@drawable/edittext_corner_shape"
        android:layout_below="@id/sampling_water2"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
