<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.phoenix.fishresourceinventorydataacquisitonsystem.activity.CatchActivity"
    tools:showIn="@layout/activity_catch">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catch_addfish"
        android:columnCount="4">

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catch_addfish"
        android:id="@+id/catch_addegg"
        android:columnCount="4">

    </GridLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/fish_name"
        android:layout_below="@+id/catch_addegg"
        android:background="@drawable/edittext_corner_shape"
        android:hint="鱼类名称"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/ovum_seedlings_num"
        android:layout_below="@+id/fish_name"
        android:background="@drawable/edittext_corner_shape"
        android:hint="卵苗总数"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ovum_seedlings_num"
        android:id="@+id/fish_ovum_num_rl"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/fish_ovum_num"
            android:background="@drawable/edittext_corner_shape"
            android:hint="鱼卵数"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fish_ovum_num"
            android:text="粒"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fish_ovum_num_rl"
        android:id="@+id/kid_fish_num_rl"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/kid_fish_num"
            android:background="@drawable/edittext_corner_shape"
            android:hint="幼鱼数"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/kid_fish_num"
            android:text="粒"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kid_fish_num_rl"
        android:id="@+id/catch_addpic"
        android:columnCount="4">

    </GridLayout>
</RelativeLayout>
