<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MonitoringSiteActivity"
    tools:showIn="@layout/activity_monitoring_site">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mon_site_add_fra_sur">

    </GridLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/detection_unit"
        android:layout_below="@id/mon_site_add_fra_sur"
        android:background="@drawable/edittext_corner_shape"
        android:hint="监测单位"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/monitors"
        android:layout_below="@id/detection_unit"
        android:background="@drawable/edittext_corner_shape"
        android:hint="监测人员(多人用'|'分隔)"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/monitoring_date"
        android:layout_below="@id/monitors"
        android:background="@drawable/edittext_corner_shape"
        android:hint="监测日期"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:id="@+id/spinner_layout"
        android:layout_below="@id/monitoring_date"
        android:background="@drawable/edittext_corner_shape"
        android:weightSum="3"
        android:layout_marginTop="5dp">
        <!-- 省-->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/province">

        </Spinner>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#bdbdbd"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <!-- 市-->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/city">

        </Spinner>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#bdbdbd"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <!-- 县-->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/country">

        </Spinner>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/village"
        android:layout_below="@id/spinner_layout"
        android:background="@drawable/edittext_corner_shape"
        android:hint="镇/村"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/water_area"
        android:hint="水域"
        android:background="@drawable/edittext_corner_shape"
        android:layout_below="@id/village"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/time_layout"
        android:orientation="horizontal"
        android:layout_below="@id/water_area"
        android:weightSum="2"
        android:layout_marginTop="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/start_time"
            android:layout_weight="1"
            android:hint="开始时间"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/end_time"
            android:layout_weight="1"
            android:hint="结束时间"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/weather_layout"
        android:orientation="horizontal"
        android:layout_below="@id/time_layout"
        android:weightSum="2"
        android:layout_marginTop="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weather"
            android:layout_weight="1"
            android:hint="天气"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/temperature"
            android:layout_weight="1"
            android:hint="气温"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_corner_shape"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>
