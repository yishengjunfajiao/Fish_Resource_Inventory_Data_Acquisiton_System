<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.phoenix.fishresourceinventorydataacquisitonsystem.activity.WaterCourseActivity"
    tools:showIn="@layout/activity_water_course">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/water_course"

        android:background="@drawable/edittext_corner_shape"
        android:hint="水层"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/deep"
        android:layout_below="@+id/water_course"
        android:background="@drawable/edittext_corner_shape"
        android:hint="深度"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/water_temperature"
        android:layout_below="@id/deep"
        android:background="@drawable/edittext_corner_shape"
        android:hint="水温"
        android:layout_marginTop="5dp"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:id="@+id/water_level"
    android:layout_below="@id/water_temperature"
    android:background="@drawable/edittext_corner_shape"
    android:hint="水位"
    android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/flow_amount"
        android:layout_below="@id/water_level"
        android:background="@drawable/edittext_corner_shape"
        android:hint="流量"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
